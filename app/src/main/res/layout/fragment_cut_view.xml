<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_manual_old"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter" />

            <View
                android:id="@+id/v_shade"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#55000000"
                android:visibility="gone" />

            <com.beini.ui.view.CropImageView
                android:id="@+id/iv_manual_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cut_manual_begin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开始裁剪图片"
                android:textColor="#000000"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btn_cut_manual_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="结束裁剪图片"
                android:textColor="#000000"
                android:textSize="17sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_manual_new"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerInside" />
    </LinearLayout>

</LinearLayout>