<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beini.ui.fragment.multimedia.ffmpeg.FFmpeg4AndroidFragment">

    <Button
        android:id="@+id/btn_choice_form_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_light_blue"
        android:text="选择图片视频"
        android:textColor="@color/color_white" />

    <RelativeLayout
        android:id="@+id/layout_relative_video_view"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <VideoView
            android:id="@+id/video_view_ffmpeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_ffmpeg_rotate_90"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_light_blue"
        android:text="旋转视频90度"
        android:textColor="@color/color_white" />

</LinearLayout>
