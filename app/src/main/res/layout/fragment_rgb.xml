<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backound_color"
    android:orientation="vertical"
    tools:context="com.beini.ui.fragment.rgb.RGBFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.beini.ui.view.ColorSelectBar
            android:id="@+id/color_select_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:max="100"
            android:progressDrawable="@drawable/palette_btn_c"
            android:thumb="@drawable/palette_icon_anjian"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/text_show_color_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
